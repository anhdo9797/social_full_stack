{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2023",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "app/*": [
        "src/*"
      ],
    },
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*"
  ],
  "files": [
    "src/type.d.ts"
  ],
}